<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/artboard_adventure"
    android:orientation="vertical"
    tools:context=".AdventureActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join the Adventure!"
            android:textAlignment="center"
            android:textColor="#AB802F"
            android:textSize="40sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="28dp"
            android:backgroundTint="#AB802F"
            android:hint="Adventurer Name"
            android:textColorHint="#A9FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="28dp"
            android:backgroundTint="#AB802F"
            android:hint="Email"
            android:textColorHint="#A9FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="28dp"
            android:backgroundTint="#AB802F"
            android:hint="Password"
            android:textColorHint="#A9FFFFFF"
            android:textSize="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create my account"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/btn_adventure"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or login with"
            android:textSize="20sp"
            android:textColor="#AB802F"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>



    </LinearLayout>
</LinearLayout>