<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".City_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#E85404"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_city"
            android:gravity="center_vertical"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/city_guide"
            android:textColor="#FFF"
            android:textSize="33sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search"
            android:drawableLeft="@drawable/ic_search"
            android:hint="Search"
            android:padding="10dp"
            android:textColorHint="#ccc"
            android:textSize="28sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/food"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginRight="30dp"
                android:background="#E20089"
                android:drawableTop="@drawable/ic_food"
                android:paddingTop="10dp"
                android:text="Food"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/books"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_toRightOf="@id/food"
                android:background="#168FE1"
                android:drawableTop="@drawable/ic_book"
                android:paddingTop="10dp"
                android:text="Books"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/pet"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_below="@id/food"
                android:layout_marginTop="30dp"
                android:background="#79CB04"
                android:drawableTop="@drawable/ic_pets"
                android:paddingTop="10dp"
                android:text="Pet Care"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/clothing"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_below="@id/books"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/pet"
                android:background="#433499"
                android:drawableTop="@drawable/ic_tshirt"
                android:paddingTop="10dp"
                android:text="Clothing"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/photo"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_below="@id/pet"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="#F68502"
                android:drawableTop="@drawable/ic_photo"
                android:paddingTop="10dp"
                android:text="Photography"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bev"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_below="@id/clothing"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_toRightOf="@id/pet"
                android:background="#F20101"
                android:drawableTop="@drawable/ic_coffee"
                android:paddingTop="10dp"
                android:text="Beverages"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>